# Tech Haven E-Commerce Frontend Configuration
# Copy this file to .env.local and fill in your values

# API Configuration
# Backend API URL (TechHaven API)
VITE_TECH_HAVEN_API_URL=http://localhost:3001/api

# Wompi Payment Gateway Configuration
# DO NOT commit Wompi credentials to public repositories!
# Get these from Wompi dashboard: https://login.staging.wompi.dev/
VITE_WOMPI_API_URL=https://api-sandbox.co.uat.wompi.dev/v1
VITE_WOMPI_PUBLIC_KEY=your_wompi_public_key_here

# Application Environment
VITE_APP_ENV=development
