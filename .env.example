# Tech Haven E-Commerce Frontend Configuration
# Copy this file to .env.local and fill in your values

# API Configuration
# Backend API URL (TechHaven API)
VITE_TECH_HAVEN_API_URL=http://localhost:3001/api

# PaymentGateway Payment Gateway Configuration
# DO NOT commit PaymentGateway credentials to public repositories!
# Get these from PaymentGateway dashboard: https://login.staging.paymentgateway.dev/
VITE_PAYMENTGATEWAY_API_URL=https://api-sandbox.co.uat.paymentgateway.dev/v1
VITE_PAYMENTGATEWAY_PUBLIC_KEY=your_paymentgateway_public_key_here

# Application Environment
VITE_APP_ENV=development
